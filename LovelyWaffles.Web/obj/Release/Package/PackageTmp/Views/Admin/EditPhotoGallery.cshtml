@model IEnumerable<LovelyWaffles.Data.Entities.PhotoGallery>
@{
    ViewBag.Title = "Редактировать фото-галерею";
}
@Html.Partial("AdminMenu")
<div class="container add_photo">
    @using (Html.BeginForm("EditPhotoGallery", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
    {
        <div class="row">
            <input type="file" name="Image" class="col-md-3" />
            <input type="submit" value="Cохранить изображение" class="col-md-3 btn btn-success" />
        </div>
    }
</div>

<div class="container">
    @for (int i = 0; i < Model.Count(); i++)
    {
        using (Html.BeginForm("EditPhotoGallery", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (i % 3 == 0)
            {
                @:<div class="row img_row">
        }
        <div class="col-sm-4">
            @Html.Hidden("PhotoID", Model.ElementAt(i).PhotoID)
            <img width="350" height="350" src="@Url.Content(Model.ElementAt(i).Photo)" class="img-responsive">
            <input type="submit" class="btn btn-danger" value="Удалить фото">
        </div>
            if ((i + 1) % 3 == 0)
            {
                @:</div>
        }
        }
    }
</div>