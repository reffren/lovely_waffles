@model LovelyWaffles.Data.Entities.IndexPage
@{
    ViewBag.Title = "Index";
}

@Html.Partial("_CarouselTop")
<div class="container-fluid">
    <div class="row">
        <div class="col-md-offset-1 col-md-6 home_descript">
            <h2 class="home_h2">@Model.HeadDescription1</h2>
            <p class="home_text">
                @Model.Description1
            </p>
        </div>
    </div>
    <div class="row">
        @foreach (var i in Model.Images)
        {
        <div class="col-md-4">
            <img src="@Url.Content(i.Pictures)" class="img-responsive" />
        </div>
        }
    </div>
    <div class="row">
        <div class="col-md-offset-1 col-md-6 home_descript">
            <h2 class="home_h2">@Model.HeadDescription2</h2>
            <p class="home_text">
                @Model.Description2
            </p>
        </div>
    </div>
    <div class="row">
        <img src="@Url.Content(Model.Picture)" class="img-responsive" />
    </div>
    <div class="row">
        <div class="col-md-offset-1 col-md-6 home_descript">
            <h2 class="home_h2">@Model.HeadDescription3</h2>
            <p class="home_text">
                @Model.Description3
            </p>
        </div>
    </div>
</div>
@Html.Partial("_CarouselDown")
<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-6 home_descript">
            <h2 class="home_h2">@Model.HeadDescription4</h2>
            <p class="home_text">
                @Model.Description4
            </p>
        </div>
    </div>
</div>