                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="menu">
                        <li>@Html.ActionLink("МЕНЮ", "Index", "Home", new { @class = "nav_letter" })</li>
                        <li>@Html.ActionLink("ФОТО", "Gallery", "Home", new { @class = "nav_letter" })</li>
                        <li>@Html.ActionLink("БЛОГ", "Service", "Home", new { @class = "nav_letter" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <hr />
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <ul class="inform">
                        <li><h2>НАШИ КОНТАКТЫ</h2></li>
